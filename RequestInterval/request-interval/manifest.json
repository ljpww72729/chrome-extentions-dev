{
  "manifest_version": 2,
  "name": "IntervalRequest",
  "short_name": "IntervalRequest",
  "description": "Request Interval.",
  "version": "1.0.3",
  "default_locale": "zh_CN",
  "icons": {
    "48": "icon.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background": { 
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "notifications",
    "activeTab",
    "storage",
    "alarms",
    "*://*/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [

  ]
}
